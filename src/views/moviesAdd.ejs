<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br>
    <section id="formulario" >
        <article class="mostrarFormulario">
            <ul class="errores" id="erroresUl" style="list-style: none;"></ul>
            <form class="form" action="/movies/create" method="POST" id="form">
                <label for="title">Titulo </label>
                <div><input type="text" name="title" id="title" >
                </div><small style="display: block;" class="is-invalid" id="errorTitle"></small>
                
                <label for="rating">Calificación </label>
                <div><input type="number" name="rating" id="rating" placeholder="Indicar valor entre 0 y 10">
                     </div>
                     <small style="display: block;" class="is-invalid" id="errorRating"></small>
                     
                    <label for="awards">Premios </label>
                <div><input type="number" name="awards" id="awards" placeholder="Indicar valor entre 0 y 10">
                    </div><small style="display: block;" class="is-invalid" id="errorAwards"></small>
                    
                <label for="release_date">Fecha de creación </label>
                <div><input type="date" name="release_date" id="release_date" >
                   </div> <small style="display: block;" class="is-invalid" id="errorRelease_date"></small>
                   
                <label for="length">Duración </label>
                <div><input type="number" name="length" id="length" placeholder="Indicar duración entre 60 y 360 minutos" >
                   </div> <small style="display: block;" class="is-invalid" id="errorLength"></small>
                   
                <label for="genreID">Género </label>
                <div>
                    <select name="genre_id" id="genre_id" >
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                    
                </div><small style="display: block;" class="is-invalid" id="errorGenre_id"></small>
                
                <br>
                <div> <button class="botonAgregar" type="submit">Agregar</button>
                
                <a  class="botonVolver" href="/movies">Listado de Películas</a></div>
            </form>
        </article>
    </section>
</body>
</html>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="/js/moviesAddValidation.js"></script>